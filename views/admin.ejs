<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/admin.css">
    <title>Admin Dashboard</title>
</head>
<body>
    <h1>Welcome to the Admin Dashboard</h1>
    <p>Here you can manage your articles.</p>

    <main>
        <section id="controls">
            <a href="/new" class="button add-button">Add New Article</a>
        </section>

        <section id="articles-list">
            <h2>Published Articles</h2>
            <ul>
                <% articles.forEach(article => { %>
                    <li class="article-item">
                        <div class="article-info">
                            <span class="article-title">
                                <a href="/article/<%= article.id %>">
                                    <h3><%= article.title %></h3>
                                </a>
                            </span>
                        </div>
                        <div class="action-buttons">
                            <span class="article-date"><%= article.date %></span>
                            <a href="/edit/<%= article.id %>" class="button edit-button">Edit</a>
                            <form action="/admin/delete/<%= article.id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this article?')">
                                <button class="button delete-button">Delete</button>
                            </form>
                        </div>
                    </li>
                <% }); %>
            </ul>
        </section>
    </main>
</body>
</html>
